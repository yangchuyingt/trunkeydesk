<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:alpha="0.8"
    android:background="@drawable/rectangle_white"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rectangle_white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
         >
        <TextView  
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="管理地址"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle_white"
            android:textColor="#000"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="请输入云主机所在的服务器地址" 
            android:layout_gravity="center"
            android:textColor="#000"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/rectangle_black_border"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical" >

            <EditText
                android:id="@+id/edt_server_ip"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:background="@null" 
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:digits="1234567890."
                />
                 </LinearLayout>
       
    </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@drawable/rectangle_white_radus_bottom"
       >
      <Button 
          android:id="@+id/bt_dialog_ensure"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="确定"
          android:layout_marginTop="2dp"
          android:textColor="#00a7fa"
          android:background="@drawable/rectangle_white_radus_bottom_left"/>
      <Button 
          android:id="@+id/bt_dialog_concel"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:textColor="#00a7fa"
          android:text="取消"
          android:layout_marginTop="2dp"
          android:background="@drawable/rectangle_white_radus_bottom_right"
          android:layout_marginLeft="1dp"/>
   </LinearLayout>
</LinearLayout>